{
    "$schema": "http://json-schema.org/draft-07/schema",
    "title": "Tournament Data",
    "description": "Data for all beer pong tournaments",
    "type": "object",
    "definitions": {
        "flavor": {
            "type": "string",
            "enum": [
                "Moritz",
                "Felix",
                "Marcel",
                "Game Pigeon",
                "3D",
                "Mehr BÃ¤lle",
                "Sniper",
                "Double Table"
            ]
        },
        "participant": {
            "type": "string",
            "enum": [
                "Millane",
                "Moritz G.",
                "Leonhard",
                "Moritz W.",
                "Mukhtar",
                "Markus",
                "Tim",
                "Michael",
                "Sophie",
                "Marcel",
                "Felix S.",
                "Lea",
                "Dominik",
                "Sebbi",
                "Hartmut",
                "Ines",
                "Idi",
                "Alex",
                "Louis",
                "Juli",
                "Lara",
                "Lennard",
                "Lili",
                "Mareike",
                "Anton",
                "Simon",
                "Robin",
                "Pablo",
                "Jakob",
                "Esther",
                "Samuel",
                "Maren",
                "Felix F.",
                "Timo",
                "Daniel",
                "Niklas",
                "Lisa",
                "Sascha",
                "Lena",
                "Kay",
                "Nico"
            ]
        }
    },
    "properties": {
        "rating": {
            "type": "object",
            "properties": {
                "firstPlace": {
                    "type": "number",
                    "minimum": 0
                },
                "secondPlace": {
                    "type": "number",
                    "minimum": 0
                },
                "thirdPlace": {
                    "type": "number",
                    "minimum": 0
                }
            },
            "required": ["firstPlace", "secondPlace", "thirdPlace"]
        },
        "tournaments": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "date": {
                        "type": "string",
                        "pattern": "^\\d{4}-\\d{2}-\\d{2}"
                    },
                    "flavor": {
                        "oneOf": [
                            {
                                "$ref": "#/definitions/flavor"
                            },
                            {
                                "type": "array",
                                "items": {
                                    "$ref": "#/definitions/flavor"
                                },
                                "minItems": 1,
                                "uniqueItems": true
                            }
                        ]
                    },
                    "type": {
                        "type": "string",
                        "enum": ["single", "team"]
                    },
                    "firstPlace": {
                        "type": "array",
                        "items": {
                            "$ref": "#/definitions/participant"
                        },
                        "uniqueItems": true
                    },
                    "secondPlace": {
                        "type": "array",
                        "items": {
                            "$ref": "#/definitions/participant"
                        },
                        "uniqueItems": true
                    },
                    "thirdPlace": {
                        "type": "array",
                        "items": {
                            "$ref": "#/definitions/participant"
                        },
                        "uniqueItems": true
                    },
                    "participants": {
                        "type": "array",
                        "items": {
                            "$ref": "#/definitions/participant"
                        },
                        "uniqueItems": true,
                        "minItems": 3
                    }
                },
                "required": [
                    "date",
                    "flavor",
                    "type",
                    "firstPlace",
                    "secondPlace",
                    "thirdPlace",
                    "participants"
                ],
                "allOf": [
                    {
                        "if": {
                            "properties": {
                                "type": {
                                    "const": "single"
                                }
                            }
                        },
                        "then": {
                            "properties": {
                                "firstPlace": {
                                    "type": "array",
                                    "minItems": 1,
                                    "maxItems": 1
                                },
                                "secondPlace": {
                                    "type": "array",
                                    "minItems": 1,
                                    "maxItems": 1
                                },
                                "thirdPlace": {
                                    "type": "array",
                                    "minItems": 1,
                                    "maxItems": 1
                                }
                            }
                        }
                    },
                    {
                        "if": {
                            "properties": {
                                "type": {
                                    "const": "team"
                                }
                            }
                        },
                        "then": {
                            "properties": {
                                "firstPlace": {
                                    "type": "array",
                                    "minItems": 1,
                                    "maxItems": 2
                                },
                                "secondPlace": {
                                    "type": "array",
                                    "minItems": 1,
                                    "maxItems": 2
                                },
                                "thirdPlace": {
                                    "type": "array",
                                    "minItems": 1,
                                    "maxItems": 2
                                }
                            }
                        }
                    }
                ]
            }
        }
    },
    "required": ["rating", "tournaments"]
}
